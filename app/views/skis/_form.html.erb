<%= simple_form_for(@ski, :html => { :class => 'form-vertical' }, :remote => true) do |f| %>
<fieldset>
    <%= f.input :number, :input_html => { :value => ski_suggested_number } %>
    <%= f.input :ski_size_id, :collection => SkiSize.all, :label_method => :size, :value_method => :id  %>
    <%= f.input :condition, :collection => ski_condition_options %>
    <%= f.input :brand , :collection => ski_brand_options %>
</fieldset>
    <div class="form-actions">
  <%= f.button :submit, :class => 'btn btn-primary' %>
  <%= submit_tag 'Reset', :type => :reset, :class => "btn btn-danger" %>
    </div>
<% end %>