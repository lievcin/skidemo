<h1>Listing packages</h1>

<table>
  <tr>
    <th>Customer</th>
    <th>Ski</th>
    <th>Boot</th>
    <th>Start date</th>
    <th>End date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @packages.each do |package| %>
  <tr>
    <td><%= package.customer_id %></td>
    <td><%= package.ski_id %></td>
    <td><%= package.boot_id %></td>
    <td><%= package.start_date %></td>
    <td><%= package.end_date %></td>
    <td><%= link_to 'Show', package %></td>
    <td><%= link_to 'Edit', edit_package_path(package) %></td>
    <td><%= link_to 'Destroy', package, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

