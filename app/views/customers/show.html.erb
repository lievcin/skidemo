<%- model_class = @customer.class -%>
<h2><%=t '.title', :default => model_class.model_name.human %></h2>

<p>
  <strong><%= model_class.human_attribute_name(:first_name) %>:</strong><br>
  <%= @customer.first_name %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:last_name) %>:</strong><br>
  <%= @customer.last_name %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:country) %>:</strong><br>
  <%= @customer.country %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:phone) %>:</strong><br>
  <%= @customer.phone %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:hotel) %>:</strong><br>
  <%= @customer.hotel %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:store_id) %>:</strong><br>
  <%= @customer.store_id %>
</p>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              customers_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_customer_path(@customer), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              customer_path(@customer),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
